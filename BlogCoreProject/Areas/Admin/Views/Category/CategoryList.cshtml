@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Admin/AdminPanelLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="ibox-content">

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Aktif Et</th>
                <th>Passif Et</th>
                <th>Redaktə Et</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var i in Model){
                <tr>
                    <td>@i.CategoryID</td>
                    <td>@i.CategoryName</td>
                    <td><a href="#" class="btn btn-primary">Aktif Et</a></td>
                    <td><a href="/Category/CategoryDelete/@i.CategoryID" onclick="return confirm('Silmək istədiyinizə əminsiniz?')" class="btn btn-danger">Passif Et</a></td>
                    <td><a href="#" class="btn btn-success">Redaktə Et</a></td>
                   
                </tr>
            }
            

        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model,page=>Url.Action("CategoryList", new {page}))
    <a asp-area="Admin" asp-controller="Category" asp-action="CategoryAdd" class="btn btn-info" style="margin-top:15px;" >Yeni Kategoriya</a>
</div>


