@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Writter/WriterPanelLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Məlumatları</h4>
            <form class="forms-sample" asp-action="Index" asp-controller="WriterProfile">
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="WriterName" id="exampleInputName1" placeholder="Ad Soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" placeholder="Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifrə</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" placeholder="Şifrə">
                </div>
                <div class="form-group">
                    <label>Şəkil Yüklə</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" asp-for="WriterImage" disabled placeholder="Şəkil Yüklə">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Yüklə</button>
                        </span>
                    </div>
                </div>
           
                <div class="form-group">
                    <label for="exampleTextarea1">Haqqımda</label>
                    <textarea class="form-control" asp-for="WriterAbout"  id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Yenilə</button>
                <button class="btn btn-light">Ləğv Et</button>
            </form>
        </div>
    </div>
</div>
