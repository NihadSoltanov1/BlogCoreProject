@model List<EntityLayer.Concrete.Writer>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
             @foreach (var i in Model){
            <div class="card-body">
                <h4 class="card-title">Haqqımda</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                        <i class="mdi mdi-account-outline icon-sm mr-2"></i>
                        <span>@i.WriterName</span>
                    </div>
                   
                </div>
               

              
                <div class="d-flex mt-5 align-items-top">
                    <img src="~/writer/assets/images/faces/face3.jpg" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@i.WriterName - @i.WriterMail</h5>
                        <p class="mb-0 font-weight-light">@i.WriterAbout</p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
               
            </div>
            }
        </div>
    </div>
</div>
